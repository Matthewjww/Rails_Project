<%= form_with(model: section) do |form| %>
  <% if section.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :section, style: "display: block" %>
    <%= form.number_field :section %>
  </div>

  <div>
    <%= form.label :crn, style: "display: block" %>
    <%= form.number_field :crn %>
  </div>

  <div>
    <%= form.label :course_id, style: "display: block" %>
    <%= form.collection_select :course_id, Course.all, :id, :short_name %>
  </div>

  <div>
    <%= form.label :semester_id, style: "display: block" %>
    <%= form.collection_select :semester_id, Semester.all, :id, :name %>
  </div>

  <%= form.label :person_id, style: "display: block" %>
  <%= form.collection_select :person_id, Person.all, :id, :name %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
